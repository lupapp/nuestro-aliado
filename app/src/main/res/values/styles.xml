<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- general -->

    <style name="FormTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/boder_fields_forms</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlueNormal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FormTextAreaInput" parent="FormTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">114dp</item>
        <item name="android:gravity">top</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">text|textMultiLine</item>
    </style>

    <style name="FormButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlueDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- main menu -->

    <style name="menuBtn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/selector_shape_circle</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="titleServicios">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/selector_shape_circle</item>
        <item name="android:padding">50dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:shadowColor">#CC000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.8</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="subTitleServicios">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:shadowColor">#A6000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    <style name="itemsListServicios">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorBlueNormal</item>
        <item name="android:borderlessButtonStyle">@style/Base.Widget.AppCompat.ActionBar.Solid</item>
    </style>

    <style name="bordeBottom">
        <item name="android:bottom">
            1dp
            <shape android:shape="rectangle">
                <solid android:color="@color/colorBlueNormal" />
            </shape>

        </item>
    </style>


</resources>
